<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ToDoApp.MainWindow"
        Background="Gray"
        Title="To-Do-App-Lm-Aj" Height="700" Width="700">
    
        <StackPanel Margin="10">
                <TextBlock Text="To-Do-List" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"
                           HorizontalAlignment="Center" />
                
                <TextBox x:Name="TaskInput" Width="200" Margin="0,0,0,10" 
                         Background="White"/>
                
                <Button Content="DODAJ NOWE ZADANIE" Width="200" Click="AddTask_Click"
                        Background="DodgerBlue" 
                        Foreground="White"
                        HorizontalAlignment="Center" />
                
                <Button Content="UsuÅ„ zadanie" Width="200" Click="RemoveTask_Click"
                        Background="Tomato" 
                        Foreground="White" 
                        HorizontalAlignment="Center" 
                        Margin="0,5,0,0"/>
                
                <ListBox x:Name="TaskList" Margin="0,10,0,0"
                         Background="Peru"/>
                
        </StackPanel>
</Window>
